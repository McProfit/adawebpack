
project Test is

   for Target use "llvm";
   for Object_Dir use ".objs";
   for Source_Dirs use
     (".",
      "../../source",
      "../../source/core",
      "../../source/bom",
      "../../source/dom",
      "../../source/html");
   for Main use ("main.adb");

   package Compiler is
      for Switches ("Ada") use ("--target=wasm32");
   end Compiler;

   package Binder is
      for Switches ("Ada") use ("-z");
   end Binder;

   package Linker is
      for Switches ("Ada") use ("--target=wasm32", "-nostdlib", "-Wl,--export-all", "-Wl,--allow-undefined", "-Wl,--no-entry");
   end Linker;

   package Builder is
      for Executable ("main.adb") use "main.wasm";
   end Builder;

end Test;
